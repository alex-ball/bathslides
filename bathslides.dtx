% We add a strut to account for the blue bar at the top, then put the main
% bibliographic metadata in the middle, then any licence information at the
% bottom.
%
\setbeamertemplate{title page}{%
  \global\booltrue{titlepage}%
  \vbox to 14mm{}%
  \begin{centering}
    \hookpretitle
    \begin{beamercolorbox}[sep=0pt]{title}
      \begin{tcolorbox}%
      [width={\linewidth - 3mm}
      ,arc=2mm
      ,sharp corners
      ,rounded corners=northeast
      ,boxrule=0pt
      ,colframe=Grey
      ,colback=Grey
      ,opacityframe=0.9
      ,opacityback=0.9
      ,coltext=white
      ,halign=flush left
      ]
        \usebeamerfont{title}\inserttitle\par%
        \ifdefvoid{\insertsubtitle}{}{%
          \vskip 0.25em%
          {\usebeamerfont{subtitle}\insertsubtitle\par}%
        }%
      \end{tcolorbox}
    \end{beamercolorbox}%
    \hooktitleauthor
    \begin{beamercolorbox}[leftskip=5mm]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \hookauthorinstitute
    \begin{beamercolorbox}[leftskip=5mm]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \hookinstituteoccasion
