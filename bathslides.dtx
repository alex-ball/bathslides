\def\hooktitleauthor{\par\vskip1.5\bigskipamount}
\def\hookauthorinstitute{}
\def\hookinstituteoccasion{\par\vskip2\bigskipamount}
\def\hookoccasiondate{\par\smallskip}
\def\hookdategraphic{\par\smallskip}
\def\hookpostgraphic{}
